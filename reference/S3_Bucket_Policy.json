{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT-ID-HERE:IAM-USER-HERE"
      },
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::YOUR-DOMAIN-HERE-terraform"
    },
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT-ID-HERE:IAM-USER-HERE"
      },
      "Action": ["s3:GetObject", "s3:PutObject"],
      "Resource": "arn:aws:s3:::YOUR-DOMAIN-HERE-terraform/*"
    }
  ]
}
